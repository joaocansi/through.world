{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "airbnb", 
    "airbnb-typescript/base"
  ],
  "plugins": [
		"react",
		"react-hooks",
		"@typescript-eslint"
	],
  "settings": {
    "import/resolver": {
			"typescript": {}
		}
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "linebreak-style": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".ts", ".tsx"]
      }
    ],
    "react/jsx-props-no-spreading": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ],
    "react/no-array-index-key": "off"
  }
}
